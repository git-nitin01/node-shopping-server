{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "no-console": "off",
        "no-undef": "error",
        "quotes": ["error", "double"],
        "max-params": ["error", 5],
        "semi": "off",
        "multiline-ternary": "off"
    },
    "globals": {
        "console": "readonly",
        "module": "readonly"
    }
}
